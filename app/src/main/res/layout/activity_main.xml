<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp">


        <TextView
            android:layout_centerInParent="true"
            android:text="Student List"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    
    <LinearLayout
        android:padding="20dp"
        android:layout_weight="7"
        android:background="#fff"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">




        <Button
            android:id="@+id/mostofaid"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="23dp"
            android:background="@color/colorAccent"
            android:text="@string/mostofa_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/masudid"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="23dp"
            android:background="@color/colorAccent"
            android:text="@string/masud_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/riponid"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="23dp"
            android:background="@color/colorAccent"
            android:text="@string/ripon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/kousikid"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="23dp"
            android:background="@color/colorAccent"
            android:text="@string/kousik_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    
    

</LinearLayout>